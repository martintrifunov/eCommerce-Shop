@model Shop.Web.Models.DTO.AddToShoppingCartDTO

@{
    ViewData["Title"] = "Add to Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddProductToCart">
            <input type="hidden" asp-for="SelectedProductId" />

            <div class="form-group text-center">
                <img src="@Model.SelectedProduct.Image" width="50%" height="50%"/>
            </div>

            <div class="form-group">
                <label asp-for="SelectedProduct.Name"></label>
                <input disabled asp-for="SelectedProduct.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="ADD TO CART" class="btn btn-danger btn-block" />
            </div>
        </form>
    </div>
</div>
