@model Shop.Web.Models.DTO.UserRegisterDTO
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5 mb-5 col-10 col-sm-8 col-md-6 col-lg-5">
    <h3 class="text-center mb-4">Register</h3>
    @Html.ValidationSummary()
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="form-group mb-4">
            <label asp-for="@Model.Email" class="control-label"></label>
            <br>
            <div class="mb-4">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group mb-4">
            <label asp-for="@Model.Name" class="control-label"></label>
            <br>
            <div class="mb-4">
                @Html.TextBoxFor(m => m.Name, new { placeholder = "First Name", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group mb-4">
            <label asp-for="@Model.LastName" class="control-label"></label>
            <br>
            <div class="mb-4">
                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="form-group mb-4">
            <label asp-for="@Model.Password" class="control-label"></label>
            <br>
            <div class="mb-4">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="form-group mb-4">
            <label asp-for="@Model.ConfirmPassword" class="control-label"></label>
            <br>
            <div class="mb-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="form-group">
            <div class="mb-4 btn-submit">
                <button type="submit" class="btn btn-danger btn-block">Sign Up</button>
            </div>
        </div>

        <div class="text-center">
            <p>Already a member? <a asp-action="Login" asp-controller="Account">Login</a></p>
        </div>
    </form>
</div>  