@model Shop.Web.Models.DTO.UserLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5 mb-5 col-10 col-sm-8 col-md-6 col-lg-5">
    <h3 class="text-center mb-4">Login</h3>
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group mb-4">
                <label asp-for="@Model.Email" class="control-label"></label>
                <br>
                <div class="mb-4">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <br>
                <div class="mb-4">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="mb-4 btn-submit">
                    <button type="submit" class="btn btn-danger btn-block">Login</button>
                </div>
            </div>

            <div class="text-center">
                <p>Not a member? <a asp-action="Register" asp-controller="Account">Register</a></p>
            </div>
    </form>
</div>  